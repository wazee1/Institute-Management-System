<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>DBConnectionServlet</servlet-name>
        <servlet-class>Controller.Employee.DBConnectionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddInterviewResultServlet</servlet-name>
        <servlet-class>Controller.Employee.AddInterviewResultServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeAccountServlet</servlet-name>
        <servlet-class>Controller.Employee.EmployeeAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>Controller.Employee.EmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchInterviewResultServlet</servlet-name>
        <servlet-class>Controller.Employee.SearchInterviewResultServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimeTableSearchServlet</servlet-name>
        <servlet-class>Controller.Employee.TimeTableSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimeTableServlet</servlet-name>
        <servlet-class>Controller.Employee.TimeTableServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeReportServlet</servlet-name>
        <servlet-class>Controller.Employee.EmployeeReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DBConnectionServlet</servlet-name>
        <url-pattern>/DBConnectionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddInterviewResultServlet</servlet-name>
        <url-pattern>/AddInterviewResultServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeAccountServlet</servlet-name>
        <url-pattern>/EmployeeAccountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/EmployeeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchInterviewResultServlet</servlet-name>
        <url-pattern>/SearchInterviewResultServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimeTableSearchServlet</servlet-name>
        <url-pattern>/TimeTableSearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimeTableServlet</servlet-name>
        <url-pattern>/TimeTableServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeReportServlet</servlet-name>
        <url-pattern>/EmployeeReportServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
